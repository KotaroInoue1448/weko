{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "max_result_window": 1000000,
    "index.max_ngram_diff":2,
    "analysis": {
      "tokenizer": {
        "ja_tokenizer": {
          "type": "kuromoji_tokenizer",
          "mode": "search"
        },
        "ngram_tokenizer": {
          "type": "nGram",
          "min_gram": 1,
          "max_gram": 3,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "analyzer": {
        "ja_analyzer": {
          "tokenizer": "ja_tokenizer",
          "filter": [
            "kuromoji_baseform",
            "kuromoji_part_of_speech",
            "cjk_width",
            "stop",
            "kuromoji_stemmer",
            "lowercase"
          ]
        },
        "ngram_analyzer": {
          "type": "custom",
          "char_filter": [
            "html_strip"
          ],
          "tokenizer": "ngram_tokenizer",
          "filter": [
            "cjk_width",
            "lowercase"
          ]
        },
        "wk_analyzer": {
          "type": "custom",
          "char_filter": [
            "html_strip"
          ],
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "stop",
            "cjk_width"
          ]
        },
        "paths": {
          "tokenizer": "path_hierarchy"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "affiliationInfo": {
        "type": "object",
        "properties": {
          "identifierInfo": {
            "type": "object",
            "properties": {
              "affiliationId": { "type": "text" },
              "affiliationIdType": { "type": "text" },
              "identifierShowFlg": { "type": "boolean" }
            }
          },
          "affiliationNameInfo": {
            "type": "object",
            "properties": {
              "affiliationName": { "type": "text" },
              "affiliationNameShowFlg": { "type": "boolean" },
              "affiliationNameLang": { "type": "text" }
            }
          }
        }
      },
      "is_deleted": { "type": "boolean" },
      "pk_id": { "type": "keyword" },
      "emailInfo": {
        "type": "object",
        "properties": {
          "email": {
            "type": "text",
            "fields": {
              "raw": { "type": "keyword" }
            }
          }
        }
      },
      "authorNameInfo": {
        "type": "object",
        "properties": {
          "firstName": { "type": "text" },
          "nameFormat": { "type": "text" },
          "familyName": { "type": "text" },
          "fullName": {
            "type": "text",
            "fields": {
              "raw": { "type": "keyword" }
            }
          },
          "language": { "type": "text" },
          "nameShowFlg": { "type": "boolean" }
        }
      },
      "gather_flg": { "type": "integer" },
      "id": {
        "type": "keyword",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "authorIdInfo": {
        "type": "object",
        "properties": {
          "idType": { "type": "text" },
          "authorId": { "type": "text" },
          "authorIdShowFlg": { "type": "boolean" }
        }
      }
    }
  }
}